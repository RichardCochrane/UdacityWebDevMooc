{% extends 'base.jinja2' %}

{% block title %}Blogs{% endblock title %}

{% block content %}

    <h1>Blogs</h1>

    <h2>Posts</h2>
    {% for post in posts %}
        <section>
            <h1><a href="/blog/{{ post.id }}">{{ post.subject }}</a></h1>

            {{ post.content }}
        </section>
    {% endfor %}

    <br /><br />
    <a href="/blog/new">Create new post</a>
{% endblock content %}
